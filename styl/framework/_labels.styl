.ucupay-date-picker
   +prefix-classes('ucupay-dp-')
    .labels
        border-top 1px solid silver
        background-color gray-background
        padding-left: 0
        margin: 0
        display: flex

      li
        color #999
        list-style none
        flex 1
        text-align center
        font-size .8rem
        line-height labels-height

        &.sunday,
        &.saturday
          color #d4b172
