.ucupay-date-picker
  +prefix-classes('ucupay-dp-')
    .calendar-item
      header
        margin-bottom 1rem
        display flex
        align-items center
        justify-content center
      header:after,
      header:before
        content: ''
        margin-top 0.7rem
        width 98px
        height 1px
        background-color #cccccc
        transform scale(0.5)
      h4
        margin 0
        padding-top 0.7rem
        color #333333
        font-weight normal
        text-align center
        line-height 3.25
        font-size 18px
        letter-spacing 0px

      ul
        display flex
        flex-wrap wrap
        margin 0
        padding 0


        li
          list-style none
          min-width 14.285714%
          max-width 14.285714%
          flex 1 1 14.285714%
          text-align center
          line-height 2.5rem
          margin-bottom 1rem
          color #333333

          for n in (0..6)
            //首行缩进增加的同时 周日 周六呈现递减状态 分别为7n-2 7n-1
            saturday = 8 - n // 7n - n + 1
            sunday = 9 - n // 7n - n + 2

            &.empty-{n}
              counter-reset date
              flex n n 14.285714% * n
              min-width 14.285714% * n
              max-width 100%

              ~ :nth-child(7n + {saturday}),
              ~ :nth-child(7n + {sunday})
                color #fab83d

            &:not(:first-child):before
              font-size 18px
              line-height 22px
              content counter(date)
              counter-increment date
  li.today:before
    content "今天" !important
    color #d4b172
  li.disabled
    color #cccccc !important
  li.select
    background-color #ffffff

