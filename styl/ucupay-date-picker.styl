@import "../node_modules/colors.css/stylus/variables.styl"
@import "framework/_variables.styl"


html,body
  overflow hidden
  height 100%

body
  background-color gray
.container
  width 375px
  height 677px
  background-color white
  margin 2rem auto
.ucupay-date-picker
  background-color white
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  color black
  font-size root-font-size
  z-index 1024
  transition all 0.2s
  display flex
  flex-direction column
  -webkit-tap-highlight-color: rgba(0,0,0,0);

  &.static
    overflow hidden
    position relative
    width 100%

  &.hide
    display none !important

  &.out
    transform translate3d(0,2em,0)
    opacity 0

  .ucupay-dp-container
    flex 1
    overflow-y auto
    -webkit-overflow-scrolling touch

@import "framework/_calendar.styl"
@import "framework/_header.styl"
@import "framework/_labels.styl"